<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Reloj</title>
        <script>
            function muestraReloj() {
                var fechaHora = new Date();
                var horas = fechaHora.getHours();
                var minutos = fechaHora.getMinutes();
                var segundos = fechaHora.getSeconds();

                if(horas < 9) { horas = '0' + horas; }
                if(minutos < 9) { minutos = '0' + minutos; }
                if(segundos < 9) { segundos = '0' + segundos; }

                document.getElementById("reloj").innerHTML = horas+':'+minutos+':'+segundos;
            };


            timeCount=new Date();
            clockStart=timeCount.getTime();

            function initStopwatch(){
                var myTime=new Date();
                return((myTime.getTime()-clockStart)/1000);
            };

            function getSecs(){
                var tSecs=Math.round(initStopwatch());
                var iSecs=tSecs%60;
                var iMins=Math.round((tSecs-30)/60);
                var sSecs=""+( (iSecs > 9) ? iSecs : "0"+iSecs);
                var sMins=""+( (iMins > 9) ? iMins : "0"+iMins);
                document.getElementById('timespent').value=sMins+":"+sSecs;
                // document.getElementById('timespent').value=sMins;
                window.setTimeout('getSecs()',1000);
            };

            window.onload = () => {
                setInterval(muestraReloj, 1000);
                window.setTimeout('getSecs()',1);
            };

            

            </script>
    </head>
    <body>

    <h1>Timer</h1>
        <!-- <p><%= new Date().getHours();%>: <%=new Date().getMinutes();%></p> -->
        <h3>Hora Actual</h3>
        <div id="reloj"> </div>
        <br>
        <input class="timepage" size="5" id="timespent" name="timespent"><br>
    </body>
</html>